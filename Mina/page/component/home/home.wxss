/* pages/mine/mine.wxss */
@import '../../common/common.wxss';
page view{
  width: 100%;
  color: #9CD4D3;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 200px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
  font-family: 'Microsoft YaHei';
  margin-top:5px;
}
.order_type_list{
  width: 90%;
  height: 60px;
  position: absolute;
  left: 5%;
  top: 165px;
  border: 1px solid #9CD4D3;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  justify-content: space-around;
}
.order_type{
  display: flex;
  flex-direction: column;
  width: 20%;
}
.order_icon{
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  display: flex;
  margin-top: 10rpx;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.order_icon image{
  width: 44rpx;
  height: 44rpx;
}
.order_title{
  height: 30%;
  width: 100%;
  text-align: center;
  font-size: 12px;
  padding-top: 5px;
  color: #555;
}
.kb_view{
  width: 100%;
  height: 50px;
  background-color: #F2F2F2;
}
.my_menu{
  display: flex;
  justify-content: space-between;
  height: 30px;
  padding: 5px 0 5px 0px;
}
.my_menu .more_view{
  width: 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.my_menu .more_view image{
  width: 60%;
  height: 60%;
}
.menu_name{
  width: 50%;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  padding-left: 5px;
}
.menu_name .list_img{
  width: 65rpx;
  height: 55rpx;
}
.menu_name view{
  font-size: 14px;
  height: 55rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding-left: 5px;
  color: #000;
}
.menu_name_border{
  border-bottom: 1px solid #F2F2F2
}
.peizhi_info{
  position: absolute;
  left: 20px;
  top: 20px;
  width: 20px;
  height: 20px;
}
.peizhi_info image{
  width: 100%;
  height: 100%;
}