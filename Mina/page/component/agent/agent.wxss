/* pages/mine/mine.wxss */
@import '../../common/common.wxss';
page view{
  color: #9CD4D3;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
  font-size: 14px;
  font-family: 'Microsoft YaHei';
  margin-top:5px;
}
.agent_tit {
  text-align: center;
  font-size: 16px;
  line-height: 30px;
}

.user_info{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  background-color: #fff;
}
.info_list{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #E9E9E9;
}
.info_name{
  width: 20%;
  height: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
}
.info_input label{
  margin-right: 10px;
}
.info_input{
  width: 70%;
  height: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
}
.info_input input{
  width: 100%;
}
.submit_button{
  width: 100%;
  margin-top: 40px;
}
.submit_button button{
  width: 90%;
  color: #fff;
  font-size: 16px;
  text-align: center;
  height: 40px;
}
.info_agree{
  text-align: center;
  height: 40px;
  display: flex;
  justify-content: space-around;
  font-size: 14px;
  align-items: center;

}
.tips{
  text-align: center;
  width: 80rpx;
  height: 80rpx;
  margin: 0rpx auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30px;
  margin-top: 30px
}
.meta{
  padding: 30rpx;
}
.meta_tit{
  font-size: 40rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #9CD4D3;
}
.meta_dsp{
  padding: 30rpx;
  border-radius: 5px;
  margin-top: 20rpx;
  font-size: 30rpx;
  color:#555;
  background-color: #f3fafa;
}
.account{
  background-color: #9CD4D3;
  padding:50rpx 0;
  text-align: center;
  color:#fff;
}
.account view{
  color:#fff;
}
.big{
  font-size: 90rpx;
  line-height: 100rpx;
  color:#fff;
}
.divid{
  height: 30rpx;
  background-color: #f5f5f5;
}
.acc_list{
  padding:0 20rpx
}
.acc_li{
  font-size: 36rpx;
  line-height: 100rpx;
  border-bottom:1px solid #f5f5f5;
}
.acc_li view{
  color:#666
}
.acc_li image{
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  float: left; 
}