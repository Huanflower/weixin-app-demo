/* pages/userInfo/userInfo.wxss */
@import '../../common/common.wxss';
page{
  background-color: #FDFDFD;
  font-family: 'Microsoft YaHei';
}
.user_info{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  background-color: #fff;
}
.info_list{
  width: 100%;
  height: 40px;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #E9E9E9;
}
.info_name{
  width: 20%;
  height: 100%;
  font-size: 14px;
  display: flex;
  align-items: center;
}
.info_input label{
  margin-right: 10px;
}
.info_input{
  width: 70%;
  height: 100%;
  font-size: 12px;
  display: flex;
  align-items: center;
}
.info_input input{
  width: 100%;
}
.submit_button{
  width: 100%;
  margin-top: 40px;
}
.submit_button button{
  width: 90%;
  background-color: #9CD4D3;
  color: #fff;
  font-size: 16px;
  text-align: center;
  height: 40px;
}
.content{
  height: 190rpx;
  width: 450rpx;
  border: 1rpx solid #E9E9E9;
}
.app_content{
  height: 115px;
}