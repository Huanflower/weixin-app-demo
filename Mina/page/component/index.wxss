@import '../common/common.wxss';
swiper {
    height: 421.5rpx;
}
swiper-item image {
    width: 100%;
    height: 100%;
}

.select-title,.newest-title{
    width: 100%;
    padding:30rpx 0;
    height: 40rpx;
    color: #666;
    text-align: center;
}
.newest-title .title-text{
  background-color: #F5F5F5;
  font-size: 30rpx;
  color: #2A2A2A;
}
.newest-title{
  display: flex;
  justify-content: center;
  align-items: center;
}
.newest-title image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.select-top{
  display: flex;
  justify-content: space-around;
}
.select-top-small{
    width: 370rpx;
    height: 370rpx;
}
.select-bottom,.select-top{
    width: 100%;
    height: 370rpx;
}
.select-bottom{
  margin-top: 10rpx;
}
.select-top-small image,.select-bottom image,.select-top-small navigator,.select-bottom navigator{
    display: block;
    width: 100%;
    height: 100%;
}
.navigator{
  background-color: #fff;
}
.newest{
  min-height: 300px;
  background-color: #F5F5F5;
}
.newest-box{
    padding:0 15rpx;
}
.newest-box .newest-list{
    display: inline-block;
    width: 350rpx;
    height: 360rpx;
    margin:10rpx 10rpx 10rpx 0rpx;
    border-radius: 10px;
    text-align: center;
    background: #f5f6f5;
}

.newest-box .newest-list .fm_img{
    width: 350rpx;
    height: 350rpx;
    margin: 0rpx 0 10rpx;
}
.newest-box .newest-list .have_tuan{
  display: flex;
  justify-content: space-between;
}
.newest-box .newest-list .newest-text{
    font-size: 30rpx;
    text-align: left;
}

.newest-box .newest-list .goods-title{
    font-size: 25rpx;
    white-space: pre-wrap;
    height: 60rpx;
    overflow: hidden;
}
.newest scroll-view{
  height: 400px;
}
.newest-box .newest-list .tg_img{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.guajian{
  display: flex;
  flex-direction: column;
  position: fixed;
  right: 0;
  bottom: 150rpx;
  background-color: rgba(0, 0, 0, .5);
  width: 90rpx;
  height: 160rpx;
  font-size: 30rpx;
  justify-content: space-around;
  opacity:0.9;
  color: #fff;  
}
.zxkf{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 30rpx;
  padding-top: 10rpx;
}
.zxkf button{
  background-color: none;
}
.zxkf image{
  width: 35rpx;
  height: 40rpx;
}
.zxyy{
  height: 70rpx;
  text-align: center;
  border-top: 1rpx solid #fff;
  line-height: 80rpx;
}
.line{
  background-color: #EDEDED;
  height: 1rpx;
  width: 750rpx;
  position: relative;
  top: 24rpx;
}
.hzgd{
  width: 750rpx;
  height: 500rpx;
  background: #fff;
  border-top: 10rpx solid #EDEDED; 
}
.hzgd .title{
  font-size: 28rpx;
  width: 750rpx;
  height: 65rpx;
  text-align: center;
  line-height: 65rpx;
  border-bottom: 1rpx solid #EDEDED;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #2A2A2A;
}
.hzgd .title image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.scroll_view{
  width: 750rpx;
  overflow: hidden;
  white-space: nowrap;
}
.hzgd .pt_navigator{
  display:inline-block;
  width: 240rpx;
  margin-left: 15rpx;
  margin-top: 15rpx;
}
.scroll_item .pt_img{
  width: 240rpx;
  height: 240rpx;
}
.scroll_item .tx_img{
  width: 600rpx;
  height: 296rpx;
  margin-top: 35rpx;
}
.scroll_item_title{
  font-size: 25rpx;
  height: 70rpx;
}
.scroll_item_price{
  font-size: 28rpx;
  height: 40rpx;
  color: #F03533;
}
.scroll_item_old_price{
  font-size: 25rpx;
  color: #ccc;
  text-decoration: line-through;
}
.hzgd .tx_navigator{
  width: 600rpx;
}
.newest-box .tx-list{
  width: 715rpx;
}
.newest-box .newest-list .tx_fm_img{
  width: 710rpx;
  height: 350rpx;
}