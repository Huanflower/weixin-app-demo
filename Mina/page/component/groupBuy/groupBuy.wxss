/* page/component/groupBuy/groupBuy.wxss */
@import '../../common/common.wxss';
.tuan_top{
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.tuan_goods_img{
  width: 400rpx;
  height: 400rpx;
}
.tuan_goods_info{
  width: 300rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tuan_goods_ssme{
  height: 300rpx;
  align-items: center;
  width: 100%;
  text-align: left;
}
.tuan_goods_ssme view{
  width: 100%;
  text-align: left;
}
.tuan_goods_djs{
  text-align: center;
  font-size: 25rpx;
}
.tuan_goods_ssme{
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  font-size: 35rpx;
}
.member_num{
  color: #9CD4D3;
}
.now_price{
  font-size: 50rpx;
}
.old_price{
  font-size: 20rpx;
  color: #ccc;
  text-decoration: line-through;
}
.white{
  width: 100%;
  height: 10rpx;
  background: #ccc;
}
.tuan_detail{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 60rpx;
  align-items: center;
  flex-wrap: wrap;
}
.member_list{
  width: 100%;
  padding: 30rpx 0rpx 30rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60rpx;
  flex-wrap: wrap;
}
.member_image{
  width: 60rpx;
  height: 60rpx;
  border: 1px dashed #cdcdcd;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 10rpx;
}
.member_image image{
  width: 60rpx;
  height: 60rpx;
}
.tz{
  width: 40rpx;
  height: 25rpx;
  border-radius: 5px;
  position: relative;
  left: 40rpx;
  top: -26rpx;
  background-color: #E8BC64;
  color: #000;
  font-size: 18rpx;
  text-align: center;
  border: 1px solid #fff;
}
.ct_button{
  width: 650rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #fff;
  border-radius: 5rpx;
  margin-bottom: 20rpx;
}
.ctxz_list{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 25rpx;
  border-top: 1px solid #ccc;
}
.ctxz_text{
  width: 120rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.ctxz_info{
  width: 550rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}
.ctsm_list{
  min-height: 200rpx;
  background-color: #fff;
  padding: 25rpx;
}
.ctsm{
  width: 700rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 25rpx;
  min-height: 40rpx;
}